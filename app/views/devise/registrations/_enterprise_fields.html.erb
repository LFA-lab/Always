<div class="space-y-4" id="enterprise-fields" style="display: none;">
  <h3 class="text-lg font-medium text-gray-900">Informations de l'entreprise</h3>
  
  <div>
    <%= f.fields_for :enterprise do |e| %>
      <div>
        <%= e.label :name, "Nom de l'entreprise", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= e.text_field :name, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
      </div>

      <div class="mt-4">
        <%= e.label :address, "Adresse", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= e.text_field :address, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</div> 